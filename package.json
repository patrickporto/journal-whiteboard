{
    "name": "fvtt-module-template",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:watch": "vite build --watch",
        "dev": "vite dev",
        "postversion": "npm run postversion:update-module-version && npm run postversion:update-module-manifest && npm run postversion:update-module-download",
        "postversion:update-module-version": "jq '.version = \"'${npm_package_version}'\"' ./public/module.json > ./public/module.json.tmp && mv ./public/module.json.tmp ./public/module.json",
        "postversion:update-module-manifest": "jq '.manifest = \"https://github.com/patrickporto/fvtt-module-template/releases/download/'${npm_package_version}'/module.json\"' ./public/module.json > ./public/module.json.tmp && mv ./public/module.json.tmp ./public/module.json",
        "postversion:update-module-download": "jq '.download = \"https://github.com/patrickporto/fvtt-module-template/releases/download/'${npm_package_version}'/fvtt-module-template.zip\"' ./public/module.json > ./public/module.json.tmp && mv ./public/module.json.tmp ./public/module.json",
        "format": "prettier --write \"src/**/*.{ts,js,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js,json,css,md}\"",
        "lint": "eslint -c .eslintrc.cjs .",
        "lint:fix": "eslint -c .eslintrc.cjs --fix ."
    },
    "devDependencies": {
        "@foundryvtt/foundryvtt-cli": "^0.0.6",
        "@league-of-foundry-developers/foundry-vtt-types": "git://github.com/League-of-Foundry-Developers/foundry-vtt-types.git#main",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "eslint": "^8.38.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^8.0.3",
        "libts": "^1.0.1",
        "lint-staged": "^13.2.1",
        "prettier": "2.8.7",
        "prettier-eslint": "^15.0.1",
        "typescript": "^4.9.5",
        "vite": "^4.2.1"
    },
    "lint-staged": {
        "**/*.{ts,js}": [
            "prettier --write",
            "eslint --fix ."
        ],
        "**/*.{json,css,md}": [
            "prettier --write"
        ]
    }
}
